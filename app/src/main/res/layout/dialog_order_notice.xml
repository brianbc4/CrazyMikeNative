<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_900"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:textColor="@color/white"
            android:text="@string/order_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_mail_notice"
                android:src="@mipmap/ic_mail_notice_circle"
                android:layout_width="@dimen/order_notice_unselected"
                android:layout_height="@dimen/order_notice_unselected" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_phone_notice"
                android:src="@mipmap/ic_phone_notice_circle"
                android:layout_width="@dimen/order_notice_unselected"
                android:layout_height="@dimen/order_notice_unselected" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineLay_user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/edit_user_input"
            android:hint="@string/please_input_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_error_format"
        android:gravity="center"
        android:textColor="@color/colorRed_CC0000"
        android:text="@string/please_input_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_send"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/send"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:text="@string/order_notice_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/img_cancel"
            android:src="@mipmap/ic_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>